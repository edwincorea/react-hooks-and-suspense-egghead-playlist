{
  "name": "react-hooks-and-suspense-egghead-playlist",
  "version": "1.0.0",
  "description": "A series of lessons about React hooks and suspense I'll be putting on Egghead.io",
  "keywords": [],
  "main": "src/index.js",
  "dependencies": {
    "react": "16.7.0-alpha.0",
    "react-cache": "16.6.0-alpha.8af6728",
    "react-dom": "16.7.0-alpha.0",
    "react-scripts": "2.0.5",
    "react-testing-library": "5.2.1",
    "vanilla-tilt": "1.5.0"
  },
  "devDependencies": {},
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "react-app"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ],
        "no-console": "off",
        "no-unused-vars": "warn",
        "no-restricted-globals": "off",
        
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": false  
  }
}
